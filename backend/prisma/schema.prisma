// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ================================
// User Types
// ================================
enum UserType {
  CLIENT
  ARTISAN
  BUSINESS
  ADMIN
}

enum ProviderSubType {
  INDIVIDUAL
  BUSINESS
}

enum AdminRole {
  SUPER_ADMIN
  MODERATOR
  SUPPORT
  FINANCE
}

enum VerificationLevel {
  BASIC
  VERIFIED
  CERTIFIED
}

enum VerificationStatus {
  PENDING
  VERIFIED
  SUSPENDED
  BANNED
}

// ================================
// User Model
// ================================
model User {
  id                 String             @id @default(uuid())
  email              String             @unique
  phone              String?            @unique
  passwordHash       String?
  firstName          String
  lastName           String
  avatar             String?
  userType           UserType
  providerSubType    ProviderSubType?
  adminRole          AdminRole?
  isVerified         Boolean            @default(false)
  isEmailVerified    Boolean            @default(false)
  isPhoneVerified    Boolean            @default(false)
  verificationStatus VerificationStatus @default(PENDING)
  verificationLevel  VerificationLevel  @default(BASIC)

  // Location
  city      String?
  state     String?
  address   String?
  latitude  Float?
  longitude Float?

  // Profile fields
  skills              Json    @default("[]")
  bio                 String?
  rating              Float   @default(0)
  totalJobs           Int     @default(0)
  preferredCategories Json    @default("[]")
  isOnline            Boolean @default(false)

  // Identity verification
  nin               String? // National Identification Number (required for individual providers)
  businessRegNumber String? // RC Number or Business Name Registration (for business accounts)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  clientBookings      Booking[]            @relation("ClientBookings")
  artisanBookings     Booking[]            @relation("ArtisanBookings")
  wallet              Wallet?
  sentMessages        Message[]            @relation("SentMessages")
  receivedMessages    Message[]            @relation("ReceivedMessages")
  notifications       Notification[]
  refreshTokens       RefreshToken[]
  verificationCodes   VerificationCode[]
  passwordResetTokens PasswordResetToken[]
  certifications      UserCertification[]
  workExperiences     WorkExperience[]
  nextOfKin           NextOfKin?

  @@index([email])
  @@index([phone])
  @@index([userType])
  @@index([city, state])
}

enum VerificationCodePurpose {
  EMAIL_VERIFY
  PHONE_VERIFY
}

model VerificationCode {
  id        String                  @id @default(uuid())
  userId    String
  user      User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  codeHash  String
  purpose   VerificationCodePurpose
  expiresAt DateTime
  createdAt DateTime                @default(now())

  @@index([userId])
  @@index([purpose])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model UserCertification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  type      String?
  issuer    String?
  year      String?
  fileName  String?
  fileUrl   String?
  status    String? // pending, verified, rejected
  createdAt DateTime @default(now())

  @@index([userId])
}

model WorkExperience {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  company     String
  duration    String
  description String?
  createdAt   DateTime @default(now())

  @@index([userId])
}

model NextOfKin {
  id           String   @id @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  relationship String
  phone        String
  address      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ================================
// Auth - Refresh Tokens
// ================================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

// ================================
// Booking/Job Types
// ================================
enum BookingStatus {
  PENDING
  ACCEPTED
  ASSIGNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  DISPUTED
}

enum PaymentStatus {
  PENDING
  PAID
  HELD_IN_ESCROW
  RELEASED
  REFUNDED
}

// ================================
// Booking Model
// ================================
model Booking {
  id String @id @default(uuid())

  // Participants
  clientId           String
  client             User      @relation("ClientBookings", fields: [clientId], references: [id])
  artisanId          String
  artisan            User      @relation("ArtisanBookings", fields: [artisanId], references: [id])
  businessId         String?
  business           Business? @relation(fields: [businessId], references: [id])
  assignedMemberId   String?
  assignedMemberName String?

  // Job details
  categoryId   String
  categoryName String
  serviceType  String
  description  String
  images       Json   @default("[]")

  // Schedule
  scheduledDate     DateTime
  scheduledTime     String
  estimatedDuration Int      @default(60) // minutes

  // Location
  address   String
  city      String
  latitude  Float?
  longitude Float?

  // Pricing
  estimatedPrice Float
  finalPrice     Float?
  platformFee    Float?

  // Status
  status        BookingStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)

  // Timestamps
  acceptedAt         DateTime?
  startedAt          DateTime?
  completedAt        DateTime?
  cancelledAt        DateTime?
  cancellationReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  review   Review?
  messages Message[]

  @@index([clientId])
  @@index([artisanId])
  @@index([status])
  @@index([scheduledDate])
}

// ================================
// Review Model
// ================================
model Review {
  id        String   @id @default(uuid())
  bookingId String   @unique
  booking   Booking  @relation(fields: [bookingId], references: [id])
  rating    Int // 1-5
  comment   String?
  createdAt DateTime @default(now())

  @@index([bookingId])
}

// ================================
// Wallet & Transactions
// ================================
enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  EARNING
  PLATFORM_FEE
  PAYOUT
  BONUS
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

model Wallet {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
  balance        Float    @default(0)
  pendingBalance Float    @default(0)
  currency       String   @default("NGN")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  transactions WalletTransaction[]

  @@index([userId])
}

model WalletTransaction {
  id          String            @id @default(uuid())
  walletId    String
  wallet      Wallet            @relation(fields: [walletId], references: [id])
  type        TransactionType
  amount      Float
  fee         Float             @default(0)
  status      TransactionStatus @default(PENDING)
  reference   String            @unique
  description String?
  metadata    Json?

  // For payouts
  bankName      String?
  accountNumber String?
  accountName   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([walletId])
  @@index([reference])
  @@index([type])
  @@index([status])
}

// ================================
// Messaging
// ================================
model Message {
  id         String    @id @default(uuid())
  bookingId  String?
  booking    Booking?  @relation(fields: [bookingId], references: [id])
  senderId   String
  sender     User      @relation("SentMessages", fields: [senderId], references: [id])
  receiverId String
  receiver   User      @relation("ReceivedMessages", fields: [receiverId], references: [id])
  content    String
  imageUrl   String?
  isRead     Boolean   @default(false)
  readAt     DateTime?
  createdAt  DateTime  @default(now())

  @@index([bookingId])
  @@index([senderId])
  @@index([receiverId])
}

// ================================
// Notifications
// ================================
enum NotificationType {
  JOB_REQUEST
  JOB_ACCEPTED
  JOB_COMPLETED
  PAYMENT_RECEIVED
  MESSAGE
  REVIEW
  SYSTEM
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType
  title     String
  body      String
  data      Json?
  isRead    Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([isRead])
}

// ================================
// Service Categories
// ================================
model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  icon        String
  description String?
  subServices Json     @default("[]")
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([isActive])
}

// ================================
// KYC Verification Documents
// ================================
enum DocumentType {
  ID_CARD
  DRIVERS_LICENSE
  PASSPORT
  UTILITY_BILL
  CERTIFICATE
  BUSINESS_REG
}

enum DocumentStatus {
  PENDING
  APPROVED
  REJECTED
}

model VerificationDocument {
  id          String         @id @default(uuid())
  userId      String
  type        DocumentType
  fileUrl     String
  status      DocumentStatus @default(PENDING)
  reviewedBy  String?
  reviewNotes String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([userId])
  @@index([status])
}

// ================================
// Material Costs (Extra charges during job)
// ================================
enum MaterialStatus {
  PENDING
  APPROVED
  REJECTED
}

model MaterialCost {
  id          String         @id @default(uuid())
  bookingId   String
  description String
  amount      Float
  imageUrl    String?
  status      MaterialStatus @default(PENDING)
  approvedAt  DateTime?
  rejectedAt  DateTime?
  createdAt   DateTime       @default(now())

  @@index([bookingId])
  @@index([status])
}

// ================================
// Artisan Availability & Scheduling
// ================================
model Availability {
  id        String  @id @default(uuid())
  userId    String
  dayOfWeek Int // 0-6 (Sunday-Saturday)
  startTime String // "09:00"
  endTime   String // "17:00"
  isActive  Boolean @default(true)

  @@unique([userId, dayOfWeek])
  @@index([userId])
}

model BlockedSlot {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime
  startTime String
  endTime   String
  reason    String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([date])
}

// ================================
// Disputes
// ================================
enum DisputeStatus {
  OPEN
  UNDER_REVIEW
  RESOLVED
  CLOSED
}

enum DisputeResolution {
  REFUND_CLIENT
  PAY_ARTISAN
  SPLIT_50_50
  PARTIAL_REFUND
  NO_ACTION
}

model Dispute {
  id          String             @id @default(uuid())
  bookingId   String             @unique
  filedById   String
  reason      String
  description String
  evidence    Json               @default("[]")
  status      DisputeStatus      @default(OPEN)
  resolution  DisputeResolution?
  resolvedBy  String?
  resolvedAt  DateTime?
  adminNotes  String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@index([status])
  @@index([filedById])
}

// ================================
// Business / Agency Management
// ================================
enum BusinessVerificationStatus {
  PENDING
  IN_REVIEW
  VERIFIED
  REJECTED
  SUSPENDED
}

enum PriceType {
  FIXED
  HOURLY
  QUOTE
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Business {
  id                 String                      @id @default(uuid())
  name               String
  ownerId            String                      @unique
  description        String?
  logo               String?
  coverImage         String?
  address            String?
  city               String?
  phone              String?
  email              String?
  isVerified         Boolean                     @default(false)
  verificationStatus BusinessVerificationStatus? @default(PENDING)
  cacNumber          String?
  tinNumber          String?
  cacDocumentUrl     String?
  tinDocumentUrl     String?
  utilityBillUrl     String?
  createdAt          DateTime                    @default(now())
  updatedAt          DateTime                    @updatedAt

  members  BusinessMember[]
  services BusinessServiceOffering[]
  bookings Booking[]
  projects BusinessProject[]

  @@index([ownerId])
}

model BusinessMember {
  id         String   @id @default(uuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  userId     String
  role       String   @default("WORKER") // OWNER, MANAGER, WORKER
  joinedAt   DateTime @default(now())
  isActive   Boolean  @default(true)

  @@unique([businessId, userId])
  @@index([businessId])
  @@index([userId])
}

model BusinessServiceOffering {
  id           String    @id @default(uuid())
  businessId   String
  business     Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  categoryId   String
  categoryName String
  description  String
  basePrice    Float
  priceType    PriceType
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([businessId])
  @@index([categoryId])
}

model BusinessProject {
  id             String          @id @default(uuid())
  businessId     String
  business       Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  title          String
  description    String
  serviceType    String
  requiredSkills Json            @default("[]")
  budgetMin      Float
  budgetMax      Float
  address        String
  city           String
  state          String
  priority       ProjectPriority @default(MEDIUM)
  artisansNeeded Int             @default(1)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([businessId])
  @@index([priority])
}

// ================================
// AI Chat History
// ================================
model ChatSession {
  id        String        @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]

  @@index([userId])
}

model ChatMessage {
  id           String      @id @default(uuid())
  sessionId    String
  session      ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role         String // "user" or "assistant"
  content      String
  suggestedCat String? // Suggested category from AI
  createdAt    DateTime    @default(now())

  @@index([sessionId])
}
